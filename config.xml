<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.nir7"
        version   = "1.0.0">

  <name>Pet Store</name>
  <description>

  </description>

  <author href="http://phonegap.com" email="nir@phonegap.com">
    nir
  </author>

  <preference name="phonegap-version" value="3.7.0"/>
  <!--<preference name="phonegap-version" value="cli-6.3.0"/>-->
  <!--long compiling and insallting time-->

  <!--<gap:plugin name="org.crosswalk.engine" version="1.3.0" />
  <gap:plugin name="cordova-plugin-whitelist" source="npm" />-->


  <feature name="Geolocation">
    <param name="ios-package" value="CDVLocation" />
    <param name="android-package" value="org.apache.cordova.geolocation.GeoBroker" />
  </feature>
  <gap:plugin name="org.apache.cordova.splashscreen" />
  <gap:plugin name="org.apache.cordova.geolocation"/>

  <preference name="permissions" value="none"/>
  <!-- to enable individual permissions use the following examples -->
  <feature name="http://api.phonegap.com/1.0/geolocation"/>


  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>

  <icon src="Resources/splash/KlingonHead.png"  width="57" height="57" />

  <!--width="470" height="320"-->
</widget>